@page "/error"
@using Microsoft.Extensions.Localization
@model ErrorModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = $"Warp. {Model.Title}";
    Layout = "_LayoutDark";
}

@section MetaTags {
    <meta name="robots" content="noindex, noarchive">
}

<div class="flex items-baseline px-3">
    <div class="w-full text-gray-400">
        <partial name="Shared/Logo" />
    </div>
</div>

<section class="mb-12 px-3 flex flex-col justify-between">
    <div>
        <div class="mb-6">
            <a class="text-blue-500 hover:underline flex items-center px-0" asp-area="" asp-page="/Index">
                <i class="icofont-simple-left mr-2"></i>@SharedLocalizer["CreateButton"]
            </a>
        </div>
        <div class="error-code text-white text-6xl font-bold mb-4">
            @Model.Status
        </div>
        <div class="error-message text-gray-200">
            <p class="mt-0 mb-5">@Model.Detail</p>
            @if (Model.ShowRequestId)
            {
                <div class="request-id text-gray-400">
                    <strong>@Localizer["Request ID"]:</strong>
                    <code>@Model.RequestId</code>
                </div>
            }
            @if (Model.ShowErrors && Model.Errors.Any())
            {
                <div class="error-list mt-4">
                    <h3 class="mb-3 text-xl">Errors:</h3>
                    @foreach (var error in Model.Errors)
                    {
                        <p class="mb-2 text-gray-300">
                            <strong>@error.Code.</strong> @error.Message
                        </p>
                    }
                </div>
            }
        </div>
    </div>
</section>